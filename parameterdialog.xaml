<Window x:Class="RconClient.ParameterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="ParameterDialog" SizeToContent="WidthAndHeight">
  <DockPanel Name="ParameterDockPanel" Margin="15,0,15,15">
    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Name="btnDialogOk" IsDefault="true" Margin="0,0,10,0" MinWidth="60">_Ok</Button>
      <Button IsCancel="true" MinWidth="60">_Cancel</Button>
    </StackPanel>
  </DockPanel>
</Window>